###############################################
# Non-sensitive env for Compose substitution
# Copy to .env and adjust as needed.
###############################################

# Database (use Docker secrets for passwords)
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress

# Web ports (adjust or leave defaults)
HTTP_PORT=8080
PHPMYADMIN_PORT=8081

